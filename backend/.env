# Server Configuration
PORT=5000
HOST=0.0.0.0

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/daily-audit

# Security Configuration
JWT_SECRET=your-super-secret-key-change-this-in-production
JWT_EXPIRE=30d
NODE_ENV=development

# CORS Configuration - Allow network access
ALLOWED_ORIGINS=*
# For production, use specific origins like:
# ALLOWED_ORIGINS=http://192.168.1.100:3000,http://192.168.1.101:3000

# Database Performance Configuration
DB_POOL_SIZE=10
DB_TIMEOUT=5000
DB_SOCKET_TIMEOUT=45000

# Server Configuration
JSON_LIMIT=10mb
URL_LIMIT=10mb

# Memory Management Configuration
MAX_MEMORY=200000000
GC_THRESHOLD=150000000
MAX_RESTART_MEMORY=500000000
ENABLE_MEMORY_MONITORING=true

# Rate Limiting Configuration
GENERAL_RATE_LIMIT=1000
BULK_RATE_LIMIT=100
AUTH_RATE_LIMIT=200

# Batch Processing Configuration
MAX_BATCH_SIZE=1000
CHUNK_SIZE=100

# Debugging Configuration
LOG_LEVEL=debug
PERF_THRESHOLD=1000
MEMORY_THRESHOLD=104857600

# Circuit Breaker Configuration
DB_FAILURE_THRESHOLD=5
DB_RESET_TIMEOUT=30000
AUDIT_FAILURE_THRESHOLD=3
AUDIT_RESET_TIMEOUT=60000
STATION_FAILURE_THRESHOLD=10
STATION_RESET_TIMEOUT=30000

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=60000
METRICS_COLLECTION_INTERVAL=30000